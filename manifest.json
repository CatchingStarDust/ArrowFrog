{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "arrowfrog",

  "description": "Highlight specific X users in red.",

  "permissions": [],

  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://*.x.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle"
    }
  ]
}
